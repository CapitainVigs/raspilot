{
    // openhd test config

    motor_number:          4,
    autopilot_loop_Hz:     2,
    stabilization_loop_Hz: 2,
    
    motor_yaw_forces :	   [ 1, -1,  1, -1],
    motor_pitch_forces:	   [ 1, -1, -1,  1],
    motor_roll_forces:	   [-1, -1,  1,  1],
    
    short_history_seconds:	   0.2,
    time_delta_for_velocity:	   0.1,
    motor_latency:         	   0.0,

    drone_max_speed: 0.15,
    drone_target_reached_range: 0.01,

    target_distance_to_velocity_factor: 2.0,

    gyropose_orientation_to_distance_factor: 0.00,

    pidXY:        { p:0.2,  i:0.2,  d:0.00001 },
#define RPB 0.20
    pidRoll:     { p:RPB,  i:0,  d:0.00000, ci: 0 },
    pidPitch:    { p:RPB,  i:0,  d:0.00000, ci: 0 },
    pidYaw:      { p:0.03,  i:0.03,  d:0.00001, ci: 0 },
    pidAltitude: { p:0.01,  i:0.05,  d:0.00001, ci:0.15 },

    motor_thrust_min_spin: 0.006,
    motor_thrust_base:     0.20,

    // sensors installed on the drone
    device: [
	{
	    name: "motors",
	    connection : {
		type: "DCT_COMMAND_BASH",
		command: "killall -9 motor-dummy; ../tool/motor/motor-dummy/motor-dummy - - 6 13 19 26"
	    },
	    stream: [
		{ type:"DT_PING",       tag: "ping",  debug_level: 110},
		{ type:"DT_THRUST",     tag: "mt4",   debug_level: 110},
		{ type:"DT_PONG",  tag: "pong",  debug_level: 10},
		{ type:"DT_DEBUG", tag: "debug", debug_level: 100},
	    ],
	},

	{
	    name: "openhd",
	    connection : {
		type: "DCT_MAVLINK_PTTY",
		link: "/dev/ttyS7",
		system_id: 1,
		component_id: 1,
		gs_system_id: 255,
		gs_component_id: 1,
	    },
	    stream: [
		{ type:"DT_DEBUG", tag: "debug", debug_level: 110},
	    ],
	},

	{
	    name: "gyropose",
	    connection : {
		type: "DCT_INTERNAL_ZEROPOSE",
	    },
            stream: [
		{ type: "DT_POSITION_VECTOR",        tag: "position",    weight: 1e-50, debug_level: 1},
            ],
	},

],
    
}
